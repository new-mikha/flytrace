<log4net>
  <appender name="ServiceNormalRollingFile" type="log4net.Appender.RollingFileAppender">
    <file value="logs\service.log" />
    <appendToFile value="false" />
    <preserveLogFileNameExtension value="true" />
    <maximumFileSize value="1024KB" />
    <maxSizeRollBackups value="1000" />
    <countDirection value="1" />

    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date{dd MMM HH:mm:ss} [%thread] [%level] [%logger] %message%newline" />
    </layout>
  </appender>

  <appender name="ObsoleteCallsAppender" type="log4net.Appender.FileAppender">
    <file value="logs\critical\obsolete_calls.log" />
    <appendToFile value="true" />

    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date{dd MMM HH:mm:ss} [%thread] [%level] [%logger] %message%newline" />
    </layout>
  </appender>

  <appender name="IncrUpdRollingFile" type="log4net.Appender.RollingFileAppender">
    <file value="logs\incr.log" />
    <appendToFile value="false" />
    <preserveLogFileNameExtension value="true" />
    <maximumFileSize value="1024KB" />
    <maxSizeRollBackups value="1000" />
    <countDirection value="1" />

    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date{dd MMM HH:mm:ss} [%thread] [%level] [%logger] %message%newline" />
    </layout>
  </appender>

  <appender name="IncrClientErrorsAppender" type="log4net.Appender.FileAppender">
    <file value="logs\critical\incr_client_errors.log" />
    <appendToFile value="true" />

    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date{dd MMM HH:mm:ss} [%thread] [%level] [%logger] %message%newline" />
    </layout>
  </appender>

  <appender name="TimedOutAbortsAppender" type="log4net.Appender.FileAppender">
    <file value="logs\critical\timed_out_aborts.log" />
    <appendToFile value="true" />

    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date{dd MMM HH:mm:ss} [%thread] [%level] [%logger] %message%newline" />
    </layout>
  </appender>

  <appender name="TimedOutRequestsAppender" type="log4net.Appender.FileAppender">
    <file value="logs\critical\timed_out_requests.log" />
    <appendToFile value="true" />

    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date{dd MMM HH:mm:ss} [%thread] [%level] [%logger] %message%newline" />
    </layout>
  </appender>


  <root>
    <level value="WARN" />
    <appender-ref ref="ServiceNormalRollingFile" />
  </root>

  <logger name="TDM">
    <level value="WARN" />
  </logger>

  <logger name="TDM.FeedReq">
    <level value="WARN" />
  </logger>

  <logger name="TimedOutAborts">
    <level value="DEBUG" />
    <appender-ref ref="TimedOutRequestsAppender" />
    <appender-ref ref="TimedOutAbortsAppender" />
  </logger>

  <logger name="TimedOutRequests">
    <level value="DEBUG" />
    <appender-ref ref="TimedOutRequestsAppender" />
  </logger>

  <logger name="TDM.IncrUpd" additivity="false">
    <level value="WARN" />
    <appender-ref ref="IncrUpdRollingFile" />
  </logger>

  <logger name="IncrTest" additivity="false">
    <level value="WARN" />
    <appender-ref ref="IncrClientErrorsAppender" />
  </logger>

  <logger name="ObsoleteCallsLog" additivity="false">
    <level value="INFO" />
    <appender-ref ref="ObsoleteCallsAppender" />
  </logger>

  <logger name="InfoLog" additivity="false">
    <level value="INFO" />
    <appender-ref ref="ServiceNormalRollingFile" />
  </logger>

</log4net>